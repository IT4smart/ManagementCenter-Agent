#!/bin/sh
# postinst script for management-agent-it4s
#
# see: dh_installdeb(1)

set -e

case "$1" in
	configure)
		# download package python-apt
        if [ ! "$(ls -A /usr/share/python/management-agent-it4s/lib/python2.7/site-packages/apt)" ] || [ ! "$(ls -A /usr/share/python/management-agent-it4s/lib/python2.7/site-packages/aptsources)" ]
        then
            apt-get download -d python-apt
            pkg=$(ls . | grep python-apt)

            if [ -z "$pkg" ]; then
                exit 1
            else 
                # move package to tmp folder and extract it
                mv "$pkg" /tmp/
                dpkg -x "/tmp/$pkg" "/tmp/python-apt"
                mv /tmp/python-apt/usr/lib/python2.7/dist-packages/* /usr/share/python/management-agent-it4s/lib/python2.7/site-packages/
            fi
        fi
            
		# copy default config if it doesn't exist
		if [ -e "/usr/share/python/management-agent-it4s/lib/python2.7/site-packages/agent/config.ini.default" ]; then
			cp /usr/share/python/management-agent-it4s/lib/python2.7/site-packages/agent/config.ini.default /usr/share/python/management-agent-it4s/lib/python2.7/site-packages/agent/config.ini
		fi

	;;
	
	abort-upgrade|abort-remove|abort-deconfigure)
		exit 0
	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;

esac


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#


exit 0