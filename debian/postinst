#!/bin/sh
# postinst script for management-agent-it4smart
#
# see: dh_installdeb(1)

set -e

case "$1" in
	configure)
		# copy default config if it doesn't exist

		# Python 3.7
        if [ ! -f "/opt/IT4smart/management-agent-it4smart/lib/python3.7/site-packages/agent/config.ini" ]; then
            if [ -e "/opt/IT4smart/management-agent-it4smart/lib/python3.7/site-packages/agent/config.ini.default" ]; then
                cp /opt/IT4smart/management-agent-it4smart/lib/python3.7/site-packages/agent/config.ini.default /opt/IT4smart/management-agent-it4smart/lib/python3.7/site-packages/agent/config.ini
            fi
        fi

		# Python 3.5
		if [ ! -f "/opt/IT4smart/management-agent-it4smart/lib/python3.5/site-packages/agent/config.ini" ]; then
			if [ -e "/opt/IT4smart/management-agent-it4smart/lib/python3.5/site-packages/agent/config.ini.default" ]; then
                cp /opt/IT4smart/management-agent-it4smart/lib/python3.5/site-packages/agent/config.ini.default /opt/IT4smart/management-agent-it4smart/lib/python3.5/site-packages/agent/config.ini
            fi
		fi
            
	;;
	
	abort-upgrade|abort-remove|abort-deconfigure)
		exit 0
	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;

esac


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#


exit 0